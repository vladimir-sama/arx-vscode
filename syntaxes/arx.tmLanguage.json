{
  "scopeName": "source.arx",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.double-slash.arx", "match": "//.*$" }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.arx",
          "match": "\\b(if|else|while|for|break|continue|return|using|class|or|and|not|in)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.arx",
          "match": "\\b(int|float|bool|string|void|any|list)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.single.arx",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.arx",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.arx", "match": "\\b\\d+(\\.\\d+)?\\b" }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.arx",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    }
  }
}
